<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" version="2.4">
  <display-name>OAI</display-name>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>application</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>application</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  
  <listener>
    <listener-class>
       org.springframework.web.context.ContextLoaderListener
     </listener-class>
  </listener>
  
  <!-- Aquí debe apuntarse al archivo de configuración en formato properties en el etc -->
	<context-param>
    	<param-name>mainConfigFilePath</param-name>
    	<param-value>/etc/lrharvester/backend.properties</param-value>
	</context-param>
	
  <!-- Este parámetro indica el incializador que carga las propiedades de contexto -->
	<context-param>
    	<param-name>contextInitializerClasses</param-name>
    	<param-value>org.lareferencia.backend.util.AppContextInitializer</param-value>
	</context-param>
  
  
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
       /WEB-INF/persistence-context.xml
       /WEB-INF/application-servlet.xml
       /WEB-INF/application-controllers.xml
       /WEB-INF/application-views.xml
     </param-value>
  </context-param>

	<welcome-file-list>
		<welcome-file>/provider</welcome-file>
	</welcome-file-list>

</web-app>
